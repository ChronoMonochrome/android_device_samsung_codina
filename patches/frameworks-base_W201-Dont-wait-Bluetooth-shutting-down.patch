-    private static String METRIC_BT = "shutdown_bt";
     private static String METRIC_RADIO = "shutdown_radio";
     private static String METRIC_SM = "shutdown_storage_manager";
 
@@ -441,7 +438,7 @@ void actionDone() {
 
     /**
